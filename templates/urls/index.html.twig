{% extends 'base.html.twig' %}

{% block title %}Urls index{% endblock %}

{% block body %}
    <h1>Urls index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Comentario</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}
            <tr>
                <td>{{ url.id }}</td>
                <td>{{ url.nombre }}</td>
                <td>{{ url.estado ? 'Yes' : 'No' }}</td>
                <td>{{ url.comentario }}</td>
                <td>{{ url.creationDate ? url.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('urls_show', {'id': url.id}) }}">show</a>
                    <a href="{{ path('urls_edit', {'id': url.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('urls_new') }}">Create new</a>
{% endblock %}
